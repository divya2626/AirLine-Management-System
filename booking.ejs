.text
{
 color: black;
 font-size: 15px;
}
  </style>
  </head>
  <body>
    <%- include('header.ejs') %>
    <form name="f2" method="post" action="/booked">
    <div class="container mt-4">
      <input type="date" style="display:none;" name="date" value="<%= date%>"></h2>
      <br /><center>
      <table class="t1"><thread><tr>
        <th><input type="text" name="source" value="<%= from%>"></th>
        <th><=======></th>
        <th><input type="text" name="destination" value="<%= to%>"></th>
      </tr>
    </thread>
      </table></center>
      <table class="table">
        <thead>
          <tr>
            <th>source</th>
            <th>destination</th>
            <th>Flight Name</th>
            <th>date</th>
            <th>time</th>
            <th>Fare</th>
            <th>book</th>
          </tr>
        </thead>
        <tbody>
          <% if(result.length){ result.forEach((row)=> {%>
          <tr>
            <td><%= row.source%></td>
            <td><%= row.destination%></td>
            <td><%= row.flight_name%></td>
            <td><%= row.date%></td>
            <td><%= row.time%></td>
            <td>$<%= row.fare%></td>
            <td ><input type="submit" name="flightname" value="<%= row.flight_name %>" color="blue"></td>
          </tr>
          <% }); }else{ %>
          <tr>
            <td>No data ever existed.</td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </form>
  </body>
</html>