      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  <style>
    .t1{background-color: black;color:white;height:50px;width:500px;margin: 50px;}
    th value{color:white;}
    body
{

 font-family: Times New Roman;
 font-size:20px;
 font-weight: bolder;
}
    body, html {
    background-image:  linear-gradient(to right, rgba(12, 11, 11, 0.7) 0 100%),url("https://i.insider.com/536e7af86bb3f72b3b7c70c0");
    opacity: 1;
    background-size: contain;
}
.table{
  background-color: white;
}
a
{
 color: white; 
}
