<html>
<head>
    <link rel="stylesheet" type="text/css" href="stylesheets/style.css">
<style>
body
{
 background-image: linear-gradient(to right, rgba(10, 10, 10, 0.7) 0 100%),url('https://modhop.com/wp-content/uploads/2016/03/2.-JAL-SKY-SUITE-III.jpg');
 background-size: cover;

 font-family: Times New Roman;
 font-size:15px;
 font-weight: bolder;
}
.booking_header{background: transparent;}

.container {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
}

.login-form {
    color:white;
    width: 300px;
    padding: 20px;
    
    border-radius: 10px;
    background:transparent;
    
    
}

.input-group {
    margin-bottom: 15px;
    padding-top: 10px;
}

.input-group label {
    display: block;
    margin-bottom: 5px;
}

.input-group input {
    width: 100%;
    padding: 8px;
    border: 1px solid #ccc;
    border-radius: 3px;
}

button {
    width: 100%;
    padding: 10px;
    border: none;
    border-radius: 3px;
    background-color: #007bff;
    color: #fff;
    cursor: pointer;
}

button:hover {
    background-color: #0056b3;
}

</style>
</head>

<body>
    <%- include('header.ejs') %>

<div class="container">
<form class="login-form" action="/register" method="post">
<center><h2>Register </h2></center>
<div class="input-group">
<label>Enter your First Name</label><p class="k"></p>
<tr><td><input type="text" placeholder="First name" name="firstname" required>
</div>
<div class="input-group">
<label>Enter your Last Name</label><p class="k"></p>
<input type="text" placeholder="Last name" name="lastname" required>
</div>

<div class="input-group">
<label>Enter your email</label><p class="k"></p>
<input type="text" placeholder="email" name="email" required>
</div>


<div class="input-group">
<label for="mobile">Enter your Mobile Number:</label><p class="k"></p>
<input type="tel" id="mobile" name="mobile" pattern="[0-9]{2}[0-9]{10}" placeholder="pno" required>
</div>
<div class="input-group">
<label for="password">Enter your Password:</label><p class="k"></p>
<input type="password" id="password" name="password" placeholder="password" required>
</div></table>
<button type="submit">Register</button>
<br><br>
<div class="text" style="color:white">Already Registered? Click <a href="/login" class="text" style="color:yellow"> here </a></div> 

</form>
</div>


</body>
</html>